<?xml version="1.0" encoding="utf-8" ?>
<ContentView x:Class="DietMVP.Controls.ToastOverlay"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="Root" IsVisible="False" InputTransparent="False">
    <Grid Padding="16" VerticalOptions="Fill" HorizontalOptions="Fill">
        <Grid x:Name="ToastHost" VerticalOptions="End" HorizontalOptions="Center" TranslationY="40" Opacity="0">
            <Frame Padding="14,10" CornerRadius="14" HasShadow="True" BackgroundColor="{StaticResource Color.Ink}">
                <Label x:Name="ToastText" TextColor="{StaticResource Color.PrimaryInk}"
                       FontFamily="{StaticResource Font.SansBold}" FontSize="14"
                       LineBreakMode="WordWrap"/>
            </Frame>
        </Grid>
    </Grid>
</ContentView>
