<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="DietMVP.Controls.LoadingOverlay"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    IsVisible="False"
    BackgroundColor="#00000000">

    <!-- Tam ekran örtü -->
    <Grid BackgroundColor="#80000000">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <!-- Alt-sheet kart -->
        <Border Grid.Row="1" x:Name="Card" TranslationY="40" Opacity="0"
            BackgroundColor="{AppThemeBinding Light=#FFFFFFFF, Dark=#172033F0}"
            StrokeThickness="0" Padding="14" Margin="16">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="18"/>
            </Border.StrokeShape>

            <HorizontalStackLayout Spacing="12" VerticalOptions="Center">
                <ActivityIndicator IsRunning="True"/>
                <Label x:Name="Lbl" Text="Yükleniyor..."
               TextColor="{AppThemeBinding Light=#111827, Dark=#E5E7EB}"
               FontAttributes="Bold"/>
            </HorizontalStackLayout>
        </Border>
    </Grid>
</ContentView>
