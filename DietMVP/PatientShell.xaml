<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DietMVP.PatientShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:patient="clr-namespace:DietMVP.Pages.Patient"
    FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Shell.BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#0B1220}"
    Shell.ForegroundColor="{AppThemeBinding Light=#111827, Dark=#E5E7EB}"
    Shell.TitleColor="{AppThemeBinding Light=#111827, Dark=#E5E7EB}"
    Shell.TabBarBackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#0F172A}"
    Shell.TabBarForegroundColor="{AppThemeBinding Light=#6D28D9, Dark=#A78BFA}"
    Shell.TabBarTitleColor="{AppThemeBinding Light=#111827, Dark=#E5E7EB}"
    Shell.TabBarUnselectedColor="{AppThemeBinding Light=#9CA3AF, Dark=#64748B}">

    <TabBar>
        <Tab Title="Ana Sayfa" Icon="home.png" Route="home">
            <ShellContent Route="home" ContentTemplate="{DataTemplate patient:HomePage}" />
        </Tab>
        <Tab Title="Rapor" Icon="ic_dashboard.png" Route="report">
            <ShellContent Route="report" ContentTemplate="{DataTemplate patient:ReportPage}" />
        </Tab>
        <Tab Title="Soruâ€“Cevap" Icon="question.png" Route="qapage">
            <ShellContent Route="qapage" ContentTemplate="{DataTemplate patient:PatientQaPage}" />
        </Tab>
        <Tab Title="Ayarlar" Icon="ic_settings.png" Route="settings">
            <ShellContent Route="settings" ContentTemplate="{DataTemplate patient:SettingsPage}" />
        </Tab>
    </TabBar>
</Shell>
