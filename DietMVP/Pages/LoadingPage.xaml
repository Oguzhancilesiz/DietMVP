<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DietMVP.Pages.LoadingPage"
             BackgroundColor="{StaticResource Color.Background}">
    <Grid RowDefinitions="*,Auto,*" ColumnDefinitions="*,Auto,*">
        <Border Grid.Row="1" Grid.Column="1" Padding="18"
                BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#111827}"
                StrokeThickness="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="18"/>
            </Border.StrokeShape>
            <VerticalStackLayout Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
                <ActivityIndicator IsRunning="True"/>
                <Label Text="Hazırlanıyor…" FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light=#111827, Dark=#E5E7EB}"/>
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
